{
  "name": "Тестовое расширение",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "img/128.png"
  },
  "browser_action": {
    "default_title": "Тестовое расширение",
    "default_icon" : "img/128.png",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": ["js/collections.js", "js/__old/functions.js", "js/__old/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "notifications",
    "alarms",
    "storage",
    "http://*/",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}